<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:padding="@dimen/list_padding">
        <TextView
            android:id="@+id/shopping_list_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:text="@string/default_list_name"
            android:textSize="@dimen/list_big_text_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingBottom="@dimen/list_name_padding_bottom" />
        <TextView
            android:id="@+id/shopping_list_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:textStyle="italic"/>
    </LinearLayout>
    <View
        android:layout_width="@dimen/vertical_divider_width"
        android:layout_height="match_parent"
        android:background="@color/verticalDividerColor"
        android:layout_marginEnd="@dimen/divider_horizontal_margin"
        android:layout_marginLeft="@dimen/divider_horizontal_margin"
        android:layout_marginRight="@dimen/divider_horizontal_margin"
        android:layout_marginStart="@dimen/divider_horizontal_margin" />
    <TextView
        android:id="@+id/shopping_list_sum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.1"
        android:gravity="center_vertical|end"
        android:textSize="@dimen/list_big_text_size" />
    <TextView
        android:id="@+id/shopping_list_currency"
        android:text="@string/currency"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/list_padding"
        android:gravity="center"
        android:textSize="@dimen/list_big_text_size" />

</LinearLayout>